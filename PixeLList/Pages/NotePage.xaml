<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PixeLList.Pages.NotePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PixeLList.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <InfoBar x:Name="successBar"
                IsOpen="False"
                Severity="Success"
                Title="Gespeichert!"
                Message="Erfolgreich gespeichert!" />

        <TextBlock Text="Titel" FontSize="19" Margin="0,0,0,5"/>
        <TextBox x:Name="titleNotizTextBox" 
                 FontSize="18" 
                 VerticalContentAlignment="Top" 
                 HorizontalAlignment="Left" 
                 Width="200"
                 AcceptsReturn="False">
        </TextBox>

        <TextBlock Text="Eingefügte Notiz" FontSize="19" Margin="0,0,0,5"/>
        <TextBox x:Name="notizTextbox"
                 FontSize="18"
                 VerticalAlignment="Bottom"
                 HorizontalAlignment="Left"
                 Width="600"
                 Height="500"
                 AcceptsReturn="True">
        </TextBox>
        <TextBlock x:Name="dateTime"
                   FontSize="18"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"/>
        <Button x:Name="saveButton" Content="Speichern" Click="saveButton_Click"/>
        
        <!--Button für die Bildauswahl-->
        <Button x:Name="imageButton" 
                Content="Bild einfügen" 
                Click="imageButton_Click"
                Margin="0,0,0,0" />
        
        <!--Contentdialog für das öffnen der OpenFile (bzw. Filepicker)-->
        <ContentDialog 
            x:Name="imageSettingsDialog" 
            PrimaryButtonText="Start" 
            CloseButtonText="Abbrechen" >
            <ContentDialog.TitleTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <FontIcon
                            Glyph="&#xE70F;"
                            Width="40"
                            Height="40"/>
                        <TextBlock VerticalAlignment="Center" Text="Einstellungen"/>
                    </StackPanel>
                </DataTemplate>
            </ContentDialog.TitleTemplate>
            
            <!--Primary Button Style-->
            <ContentDialog.PrimaryButtonStyle>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="{ThemeResource SystemAccentColorDark1}"/>
                </Style>
            </ContentDialog.PrimaryButtonStyle>
        </ContentDialog>
        
        <Image x:Name="notizImage" Width="200" Height="200" Stretch="Uniform"/>
    </StackPanel>
</Page>

