                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <FontIcon Grid.Column="0" Glyph="&#xE734;" HorizontalAlignment="Left"/>
                        <TextBlock Grid.Column="1" Text="Ordner"/>
                    </Grid>
