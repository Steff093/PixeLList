        <NavigationView x:Name="navigateItem" ItemInvoked="navigateItem_ItemInvoked" Grid.Row="1">
            <Frame x:Name="contentFrame">
                <Frame.Content>
                    <local1:AllNotesList/>
                </Frame.Content>
            </Frame>
            <NavigationView.MenuItems>
                <NavigationViewItem Tag="Notizen">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="32"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <FontIcon Grid.Column="0" Glyph="&#xE70B;" HorizontalAlignment="Left"/>
                        <TextBlock x:Name="Notizen" Grid.Column="1" Text="Notizen"/>

                    </Grid>
                    <NavigationViewItem.ContextFlyout>
                        <MenuFlyout>
                            <MenuFlyoutItem x:Name="newNotiz" Text="Neue Notiz" Click="newNotiz_Click"/>
                            <!--<MenuFlyoutItem x:Name="pitureMenuFlyout" Text="Bild hinzufügen" Click="picTureMenuFlyout_Click"/>-->
                        </MenuFlyout>
                    </NavigationViewItem.ContextFlyout>
